{% extends 'partials/_master.twig' %}

{% block main %}

    {% if record|default %}

        <h1><a href="{{ record|link }}">{{ record|title }}</a></h1>

        {{ record|excerpt }}

        {% include 'partials/_image.twig' with ({'image': record|image}) %}

        {{ record.content }}

        {#{ include('partials/_recordfooter.twig', { 'record': record }) }#}

    {% endif %}

{% endblock main %}
